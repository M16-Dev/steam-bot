{
    "tasks": {
        "dev": "deno run --watch -A --env src/index.ts",
        "start": "deno run --allow-net --allow-env --allow-read --env src/index.ts",
        "deploy": "deno run --allow-net --allow-env --allow-read --env src/deploy-commands.ts",
        "format": "deno fmt",
        "format:check": "deno fmt --check",
        "lint": "deno lint",
        "test": "deno test",
        "check": "deno task format:check && deno task lint && deno task test",
        "install-hooks": "deno run --allow-read --allow-write scripts/install-hooks.ts"
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1",
        "@std/fs": "jsr:@std/fs@1",
        "discord.js": "npm:discord.js@^14.24.1"
    },
    "fmt": {
        "lineWidth": 120,
        "indentWidth": 4
    }
}
